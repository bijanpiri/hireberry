<% layout('layout') %>

<!DOCTYPE html>
<html>
<head>
    <meta charset=utf-8 />
    <title>Boarder</title>

    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' />
    <script src='//api.tiles.mapbox.com/mapbox.js/v1.5.2/mapbox.js'></script>
    <link href='//api.tiles.mapbox.com/mapbox.js/v1.5.2/mapbox.css' rel='stylesheet' />
    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="/bootstrap/js/bootstrap.js"></script>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">

    <style>
        #mapcontainer{
            height: 500px;
        }
        #map{
            height: 500px;
        }

    </style>
</head>

<body>

<div class="container">
    <div class="row">
        <div class="span3">
            <form>
                <fieldset>
                    <div class="control-group">
                        <div class="control-label"> Board Name:</div>
                        <div class="controls ">
                            <div class="input-prepend input-append">

                                <input type="text" name='name' placeholder="Enter your new board name here">
                            </div>
                            <label class="help-inline"></label>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="control-label"> Category:</div>
                        <div class="controls ">
                            <div class="input-prepend input-append">
                                <select class="categories">

                                </select>
                            </div>
                            <label class="help-inline"></label>
                        </div>
                    </div>
                    <div class="control-group">

                        <div class="control-label"> Board Location:</div>
                        <div class="controls ">
                            <div class="control-label"> Latitude:</div>
                            <div class="input-prepend input-append">
                                <input type="text" id="lat" name='lat' placeholder="">
                            </div>
                            <div class="control-label"> Longitude:</div>
                            <div class="input-prepend input-append">
                                <input type="text" id="lng" name='lng' placeholder="">
                            </div>
                            <label class="help-inline"></label>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="control-label"> Tags:</div>
                        <div class="controls ">
                            <div class="input-prepend input-append">

                                <input type="text" name='tags' placeholder="Enter tags here to search faster">
                            </div>
                            <label class="help-inline"></label>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="control-label"> Privacy:</div>
                        <div class="btn"></div>

                        <div>

                        </div>

                    </div>

                </fieldset>
            </form>
        </div>
        <div class="span9" id="mapcontainer">
            <div id="map"></div>
        </div>
    </div>
</div>


<script src='/script/newboard.js'>

</script>

</body>
</html>
