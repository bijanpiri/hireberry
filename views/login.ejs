                            <div class="controls ">
                                <div class="input-prepend">
                                    <span class="add-on"><i class="icon-envelope"></i></span>
                                    <input type="text" id="email"
                                           onblur="isEmailAddress();"
                                           name=<%=everyauth.password.loginFormFieldName%> placeholder="Enter Email address">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label"> Password:</div>
                            <div class="controls ">
                                <div class="input-prepend">
                                    <span class="add-on">#</span>
                                    <input type="password"
                                           name=<%=everyauth.password.passwordFormFieldName%>
                                           placeholder='Enter password'>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <button type="submit" class="btn btn-primary" >Sign in</button>
                            </div>
                        </div>
                        <div>
                            <div class="controls">Don't have an acoount?
                                <a href="/register">Create One</a>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
        <div class="span2">
            <h3 style="text-align: center;font-size: 2em;color: #fff">OR</h3>
        </div>
        <div class="span4">
            <div class="loginPanel control-group">
