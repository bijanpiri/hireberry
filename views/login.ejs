<% layout('layout') -%>
<script language="javascript" type="text/javascript">


    /* document.getElementById()*/
    function isEmailAddress() {
        var email = document.getElementById("email").value;
        var pattern = /^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$/;
        if(!email.match(pattern))
            alert("Email not valid");
        else
            alert("Email valid");
        return pattern.test(email);
    }
</script>
<div class="container">
    <div class="row ">
        <div class="span12">
            <form class="form-horizontal" action="/login" method="post">
                <fieldset>
                    <div class="control-group">
                        <div class="control-label"> Email:</div>
                        <div class="controls ">
                            <div class="input-prepend">
                                <span class="add-on"><i class="icon-envelope"></i></span>
                                <input type="text" id="email" name=<%=everyauth.password.loginFormFieldName%> placeholder="Enter Email address">
                            </div>
                            <label class="help-inline">example@mail.com</label>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="control-label"> Password:</div>
                        <div class="controls ">
                            <div class="input-prepend">
                                <span class="add-on">#</span>
                                <input type="password"
                                     name=<%=everyauth.password.passwordFormFieldName%>
                                     placeholder='Enter password'>
                            </div>
                        </div>
                        <label class="help-inline"></label>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <a href="/register" class="btn input-medium">Register</a>
                            <input type="submit" class="btn btn-primary input-medium " value="login" >
                            <h2>OR</h2>
                            <!--<a href='/register' class="btn input-small btn-warning">Sign up</a>-->
                            <button type="button" onclick="location.href='/register';"
                                    class="btn btn-warning input-small " >Sign Up</button>
                            <button type="submit" class="btn btn-primary input-small " onclick="isEmailAddress()" >Sign in</button>
                        </div>
                    </div>
                    <h2>OR</h2>

                    <div class="control-group">
                        <div class="controls">
                            <a href="/auth/twitter">
                                <img src="/images/sign-in-with-twitter-gray.png">
                            </a>
                        </div>
                        <div class="controls">
                            <a href="/auth/google">
                                <img src="/images/White-signin_Long_base_44dp.png" width="200px"/>
                            </a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
