<% layout('layout') -%>
<script language="javascript" type="text/javascript">

    /* document.getElementById()*/
    function isEmailAddress() {
        var email = document.getElementById("email").value;
        var pattern = /^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$/;
        if(!email.match(pattern))
            alert("Email not valid");
        else
            alert("Email valid");
        return pattern.test(email);
    }
</script>
<div class="container">
    <div class="row ">
        <div class="span2">
            <form class="form-horizontal" action="/login" method="post">

                <fieldset>
                    <div class="control-group">
                        <div class="control-label"> Email:</div>
                        <div class="controls ">
                            <div class="input-prepend input-append">

                                <input type="text" id="email" name=<%=everyauth.password.loginFormFieldName%> placeholder="Enter Email address">
                            </div>
                            <label class="help-inline">example@mail.com</label>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="control-label"> Password:</div>
                        <div class="controls ">
                          <input type="password"
                                 name=<%=everyauth.password.passwordFormFieldName%>
                                 placeholder='Enter password'>
                        </div>
                        <label class="help-inline"></label>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <a href="/register" class="btn input-medium">Register</a>
                            <input type="submit" class="btn btn-primary input-medium " value="login" onclick="isEmailAddress()">
                            <h2>OR</h2>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <a href="/auth/twitter" class="btn input-large">Connect with Twitter</a>
                            <a href="/auth/google" class="btn input-large">Connect with g+</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
