            <div id="switchTeamEdit" hidden>
                <select id="userTeams" style="width: 100%;"></select>
                <a id="changeUserTeam" href="#" class="btn btn-mini btn-success">OK</a>
                <a id="cancelChangeUserTeam" href="#" class="btn btn-mini btn-danger">Cancel</a>
            </div>
