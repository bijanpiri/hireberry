<div id="wrap">

<div class="menu">
    <div class="menu-header">
        <div id="switchTeamView">
            <div id="currentTeamName">Current Team</div>
            <button id="switchButton" class="btn btn-mini" onclick="GAEvent('Dashboard','Team','Open ChangeTeam')">
                <i class="fa fa-random fa-lg"></i>
                Change Team
            </button>
        </div>


        <div id="switchTeamEdit" hidden>
            <select id="userTeams" style="width: 100%;"></select>
            <a id="changeUserTeam" class="btn btn-mini btn-success">OK</a>
            <a id="cancelChangeUserTeam" class="btn btn-mini btn-danger">Cancel</a>
        </div>
    </div>

    <div id="dashboardNavigator">

        <input type="radio" id="radio-item-overview" hidden name="menuItems" checked>
        <label class="item" for="radio-item-overview" onclick="GAEvent('Dashboard','Menu','Overview');window.location='#overviewp'">Overview</label>

        <input type="radio" id="radio-item-team" hidden name="menuItems">
        <label class="item" for="radio-item-team" onclick="GAEvent('Dashboard','Menu','Team');window.location='#teamp'">Team</label>

        <input type="radio" id="radio-item-jobs" hidden name="menuItems">
        <label class="item" for="radio-item-jobs" onclick="GAEvent('Dashboard','Menu','Jobs');window.location='#jobsp'">Jobs</label>

        <input type="radio" id="radio-item-applications" hidden name="menuItems">
        <label class="item" for="radio-item-applications" onclick="GAEvent('Dashboard','Menu','Applications');window.location='#applicationsp'">Applications</label>

        <input type="radio" id="radio-item-billing" hidden name="menuItems">
        <label class="item" for="radio-item-billing" onclick="GAEvent('Dashboard','Menu','Billing');window.location='#billingp'" hidden>Billing</label>

    </div>

</div>

<div class="container-fluid">

<div class="row-fluid">

<div class="span12 right-panel">

<div id="overviewp" class="container-fluid sectionContainer">
    <div class="row-fluid statisticsRow">
        <div class="span3 statBox">
            <a onclick="window.location='#jobsp'">
                <div class="text">Jobs</div>
                <div class="number" id="statValue1"></div>
            </a>
        </div>

        <div class="span3 statBox">
            <a onclick="window.location='#jobsp'">
                <div class="text">Published Jobs</div>
                <div class="number" id="statValue2"></div>
            </a>
        </div>

        <div class="span3 statBox">
            <a onclick="window.location='#applicationsp'">
                <div class="text">Applications</div>
                <div class="number" id="statValue3"></div>
            </a>
        </div>

        <div class="span3 statBox">
            <a onclick="window.location='#teamp'">
                <div class="text">Team Members</div>
                <div class="number" id="statValue4"></div>
            </a>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">

            <div id="full-clndr" class="clearfix" hidden>
                <script type="text/template" id="full-clndr-template">
                    <div class="clndr-controls">
                        <div class="clndr-previous-button">&lsaquo;</div>
                        <div class="month">{{ year }} - {{ month }}</div>
                        <div class="clndr-next-button">&rsaquo;</div>
                    </div>
                    <div class="clndr-grid">
                        <div class="days-of-the-week clearfix">
                            {% _.each(daysOfTheWeek, function(day) { %}
                            <div class="header-day">{{ day }}</div>
                            {% }); %}
                        </div>
                        <div class="days clearfix">
                            {% _.each(days, function(day) { %}
                            <div class="{{ day.classes }}" date="{{ day.date }}" id="{{ day.id }}">
                                <span class="day-number">{{ day.day }}</span></div>
                            {% }); %}
                        </div>
                    </div>
                    <div class="event-listing">
                        <div class="event-listing-title">EVENTS THIS MONTH</div>
                        {% _.each(eventsThisMonth, function(event) { %}
                        <div class="event-item" onmouseover="mouseEnterEvent('{{ event.date }}')" onmouseout="mouseLeaveEvent('{{ event.date }}')">
                            <div class="event-item-name">{{ event.title }}</div>
                            <div class="event-item-location">{{ event.location }}</div>
                        </div>
                        {% }); %}
                    </div>
                </script>
            </div>
        </div>
    </div>
</div>

