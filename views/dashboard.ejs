                <a class="btn btn-mini btn-primary candidate-resume-download-button" onclick="GAEvent('Dashboard','ApplicationView','Resume-Download')" target="_blank">Download</a>
                <a class="btn btn-mini btn-primary candidate-resume-upload-button"onclick="GAEvent('Dashboard','ApplicationView','Resume-Upload')" >Upload</a>
