    <div class="mbox-container">
        <div class="mbox-title">
            <i class="fa fa-file"></i> Note
        </div>
        <div class="mbox" style="height: 150px">
            <div class="candidate-note">
                <div class="value" style="float: left;width: 90%;height: 100%;padding: 10px;font-size: 1.5em;"></div>
