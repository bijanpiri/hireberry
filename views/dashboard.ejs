<form id='teamSettingForm' class="form-horizontal no-border-box" method="post">
    <div id="team-settings-dialog" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="teamSetLabel"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">Team Settings Dialog</h3>
        </div>
        <div class="modal-body">
            <div class="control-group">
                <label class="control-label" for="teamAdminList">Team Admin</label>

                <div class="controls team-admin-combo">

                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="teamNameInput">Team Name</label>
                <div class="controls">
                    <input type="text"
                           placeholder="My Team Name"
                           name="teamName">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="teamAddress">Team address</label>
                <div class="controls">
                    <textarea
                            placeholder="eg. 32, Mountain View, California"
                            name="teamAddress"></textarea>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="teamTel">Tel</label>
                <div class="controls">
                    <input type="text"
                           placeholder="eg 88-55-32-3"
                           name="teamTel">
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button type="submit" class="btn btn-primary"
                    data-loading-text="Saving...">Save changes
            </button>
        </div>
    </div>
    <div class="bool-alert-group">
        <div class="alert alert-dismissable alert-info bool-alert-toast hide">
            <a class="close" data-dismiss="alert" aria-hidden="true">&times;</a>
            <strong>Updating </strong> Team settings...
        </div>
        <div class="alert alert-dismissable alert-danger bool-alert-toast hide">
            <a class="close" data-dismiss="alert">&times;</a>
            <strong>Faield </strong> to update team settings. Retrying in
            <span class="bool-retry-timeout">10</span>s...
            <button type="submit" class="btn btn-info" data-loading-text="Updating ...">Try now</button>
        </div>
        <div class="alert alert-dismissable alert-success bool-alert-toast hide">
            <a class="close" data-dismiss="alert" aria-hidden="true">&times;</a>
            Team settings has been updated
            <strong>successfully.</strong>
        </div>
    </div>
</form>

