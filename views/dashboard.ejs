                    <a op="no"> <i class="fa fa-times"></i></a>
                </span>
            </div>
            <div class="candidate-conditions candidate-conditions-place">
                <strong>WorkPlace:</strong>
                <select style="display: none">
                    <option val="home">home</option>
                    <option val="office">office</option>
                </select>
                <span class="value">@Home</span>
                <span class="bool-edit-switch" edit-switch-of="candidate-conditions-place" fixValues="true">
                    <a op="edit"><i class="fa fa-edit"></i> </a>
                    <a op="yes"><i class="fa fa-check"></i></a>
                    <a op="no"> <i class="fa fa-times"></i></a>
                </span>
            </div>

            <div class="candidate-skills">
                <strong>Skills:</strong>
                <span class="value">CSS, jQuery, Nodejs</span>
                <span class="bool-edit-switch" edit-switch-of="candidate-skills">
                    <a op="edit"><i class="fa fa-edit"></i> </a>
                    <a op="yes"><i class="fa fa-check"></i></a>
                    <a op="no"> <i class="fa fa-times"></i></a>
                </span>
            </div>
            <div class="candidate-resume">
                <strong>Resume:</strong>
