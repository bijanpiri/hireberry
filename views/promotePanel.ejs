    }
</style>

<script>


    $(document).ready(function () {
        $.ajax({
            url: '/dashboard/getinfo',
            type: 'GET',
            dataType: 'json',
            success: function (data) {


               for (var i = 0; i < data.length; i++) {


                   var row = $('#flyer-list .positionsHeaderRow')
                           .clone()
