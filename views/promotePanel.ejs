                    var FlyerObj = $('<a>')
                            .addClass('pos')
                            .text(job_title)
                            .attr('href',"http://localhost:5000/flyer/edit/0?"+data[i].FlyerId);

                   var PaymentObj = $('<span>')
                           .text(data[i].TotalPrice);

                   var jobBorads = $('<div>')
                           .addClass('tree')
