/*for hiding link on social netwowk images*/
.social-network a{
    overflow: hidden;
    text-decoration:none !important;
}

.social-network input{
    height: 48px;
    width: 48px;
    border-radius: 8px;
    border: 2px ;
    border-color: #2d6987;
    border-style: solid;
    margin-right: 20px;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #e3e3e3;
}

.social-network input:hover{
    height: 48px;
    width: 48px;
    border-radius: 8px;
    border: 2px ;
