    background: #c3c3c3;
    font-weight: 700;
    border-radius: 7px;
    padding-bottom: 20px;
    font-size: 2.5em;
}

.job-boards label{
    position: relative;
    height: 35px;
    font-weight: 300;
    font-size: 0.6em;
    top: -7px;
    display: inline-block;
}
.job-boards input[type=number]{
    height: 35px;
    width: 100px;
}

.job-boards input[type=checkbox]{
    height: 24px;
    width: 24px;
    border-radius: 8px;
    border: 2px;
    border-color: #2d6987;
    border-style: solid;
    margin-right: 60px;
    background-color: #e3e3e3;
}

.job-boards input[type=button]{
    height: 64px;
    width: 64px;
    border-radius: 8px;
    border: 2px;
    border-color: #2d6987;
    border-style: solid;
    /*margin-right: 20px;*/
    background-position: center;
    background-repeat: no-repeat;
    background-color: #e3e3e3;
}

.job-boards input[type=button]:hover{
    height: 64px;
    width: 64px;
    border-radius: 8px;
    border: 2px ;
    border-color: #B3B3B3;
    border-style: solid;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #fcfcfc;
}

.job-boards input[type=button]:active{
    height: 64px;
    width: 64px;
    border-radius: 8px;
    border: 2px ;
    border-color: #f8f8f8;
    border-style: solid;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #fcfcfc;

}

