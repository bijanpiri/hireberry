<% layout('layout') -%>

<script src="/flyer.js"></script>
<script>
    $(function(){

        $('.portletStack').each(function(index){
            var flyer = new Flyer(false);

            var portletStackID = $(this).attr('id');
            var flyerid = $(this).attr('flyerid');

            flyer.loadLastFlyer( flyerid, portletStackID );
        })
    });
</script>

<div class="row">
    <div class="span6" style="float: none;margin: 0 auto;">
        <h2 class="caption">Timeline<span class="badge badge-warning"><%= flyers.length %></span></h2>
        <div>
            <% for(i=0;i<flyers.length;i++){%>
            <div class="span5" style="margin-bottom: 30px">
                <a class="thumbnail" href="/flyer/<%=flyers[i]._id%>">
                    <h3 class="caption"><%=flyers[i].flyer.description%></h3>
                    <div class="portletStack" id="portletStack<%=i%>" flyerid="<%=flyers[i]._id%>"></div>
                </a>
            </div>
            <%}%>
        </div>
    </div>
</div>