
<html>
<head>
    <title>Booltin | Applicant Relationship Management</title>
    <script src="/script/jquery.min.js"></script>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f1f1f1;
        }

        .box {
            background-color: #FFFFFF;
            display: none;
            padding: 20px 40px;
            box-shadow: 1px 1px 5px #B3B3B3;
            border-radius: 7px;
            position: absolute;
            margin: auto;
            left: 0;
            right: 0;
            width: 40%;
            top: 0;
            bottom: 0;
            height: 80%;
            text-align: center;
            font-size: 1.5em;
        }

        .box .title {
            font-size: 1.8em;
            padding-bottom: 0.5em;
            border-bottom: 2px solid #000;
            margin-bottom: 1em;
        }

        .box .actions {
            position: absolute;
            bottom: 1em;
            left: 0;
            right: 0;
        }

        .footer {
            text-align: center;
            position: absolute;
            bottom: 1em;
            left: 0;
            right: 0;
        }
    </style>
</head>
<body>
<div class="box interview" hidden>
    <div class="title">Invitation</div>
    <div class="body">
        <div class="message">
            <p class="invitationText" style="text-align: left;line-height: 1.5em;"></p>
        </div>

    </div>
    <div class="actions">
        <button class="interview_yesButton btn btn-success">I Will Come</button>
        <button class="interview_noButton btn btn-danger">I Can't Come</button>
    </div>
</div>

<div class="box offer" hidden>
    <div class="title">Job Offer</div>
    <div class="body">
        <div class="message">
            <p class="invitationText" style="text-align: left;line-height: 1.5em;"></p>
        </div>
    </div>
    <div class="actions">
        <button class="interview_yesButton btn btn-success">Accept</button>
        <button class="interview_noButton btn btn-danger">Decline</button>
    </div>
</div>

<div class="footer">
    Powered by <a href="http://boolt.in">Booltin</a>
</div>

<script>
    var messageType = '<%= messageType %>';
    var messageID = '<%= messageID %>';

    $( function() {
        if( messageType === '1' )
            $('.interview').show();
        else if(messageType === '2' )
            $('.offer').show();

        $('.interview_yesButton').click( function() {
            $.post('/applicant/message/' + messageType + '/' + messageID,{response:'YES'}).done( function() {
                window.close();
            });
        })

        $('.interview_noButton').click( function() {
            $.post('/applicant/message/' + messageType + '/' +  messageID,{response:'NO'}).done( function() {
                window.close();
            });;
        })

        var msg = '<%=messageText%>';
        msg = msg.replace(/&lt;/g,'<').replace(/&gt;/g,'>');
        $('.invitationText').html(msg);
    })

</script>

</body>
</html>