    <script language="javascript">
        $(document).ready(function() {
            $("#searchInput").typeahead([{
                name: 'users',
                header: '<div style="background-color: #c4bebf;padding: 5px;"><i><b>User</b></i><hr></div>',
                valueKey: 'display',
                remote: '/search/users?q=%QUERY',
                template: [
                    '<div class="repo-name" style="background-color: #c4bebf;padding: 5px;">',
                    '<b>{{display}}</b><br>',
                    '<i>{{link}}</i>',
                    '</div>'
                ].join(''),
                engine: Hogan,
                limit: 5
            },{
                name: 'boardsByName',
                header: '<div style="background-color: #c4bebf;padding: 5px;"><i><b>Boards-ame</b></i><hr></div>',
                valueKey: 'display',
                remote: '/search/boards/name?q=%QUERY',
                template: [
                    '<div class="repo-name" style="background-color: #c4bebf;padding: 5px;">',
                    '<b>{{display}}</b><br>',
                    '<i>{{link}}</i>',
                    '</div>'
                ].join(''),
                engine: Hogan,
                limit: 5
            },{
                name: 'boardsByTag',
                header: '<div style="background-color: #c4bebf;padding: 5px;"><i><b>Boards-Tag</b></i><hr></div>',
                valueKey: 'display',
                remote: '/search/boards/tag?q=%QUERY',
                template: [
                    '<div class="repo-name" style="background-color: #c4bebf;padding: 5px;">',
                    '<b>{{display}}</b><br>',
                    '<i>{{link}}</i>',
                    '</div>'
                ].join(''),
                engine: Hogan,
                limit: 5
            }]);

            $('#searchInput').on('typeahead:selected', function (object, datum) {
                window.location = datum.link;
            });

            // Set user avatar from Gravatar service
            var email = "<%= (everyauth.user && everyauth.user.email) ? everyauth.user.email : ''%>";
            var hash = CryptoJS.MD5( email.trim().toLowerCase() );
            $('.avatar').attr('src','http://www.gravatar.com/avatar/' + hash );
            $('#changeAvatar').attr('href','http://www.gravatar.com/' + hash );
        });

        function search()
        {
            var datastring= $("#searchform").serialize();
            $.ajax({
                url: '/search',
                type: 'get',
                dataType: 'json',
                data: datastring,
                error: function(data){
                    alert('error '+data.status);
                },
                success: function(data){
                    alert('success '+data.status);
                    $('browsers').append('<option value="coyBIT">');
                }
            });
            return false;
        }
    </script>

